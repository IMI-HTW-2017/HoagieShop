
<h2>Your Order</h2>
<div class="round-borders">

  <p id="notice"><%= notice %></p>
  <p>
    <strong>Delivery address:</strong>
    <%= @order.delivery_address %>
  </p>

  <p>
    <strong>Billing method:</strong>
    <%= @order.billing_method %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @order.order_price * 0.01 %> â‚¬
  </p>

  <p>
    <strong>Subs:</strong>
  <ul>
    <% @order.subs_list.each do |sub| %>
      <%= tag.li link_to "#{sub.main_ingredient.name} Hoagie", sub %>
      <%= link_to 'Destroy', sub, method: :delete, data: {confirm: 'Are you sure?'} %>
    <% end %>
  </ul>

</div>
<%= link_to 'Edit', edit_order_path(@order) %>
<br>
<%= link_to 'Add a Hoagie', new_sub_path(@order), class: 'btn btn-primary' %>
<%= link_to 'Check Out', checkout_order_path(@order), class: 'btn btn-secondary', id: 'check_out' %>
