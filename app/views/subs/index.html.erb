<p id="notice"><%= notice %></p>

<h1>Subs</h1>

<table class="round-borders">
  <thead>
    <tr>
      <th>Order</th>
      <th>Bread</th>
      <th>Main ingredient</th>
      <th>Ingredients</th>
      <th>Sauce</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subs.each do |sub| %>
      <tr>
        <td><%= sub.order.id %></td>
        <td><%= sub.bread.name %></td>
        <td><%= sub.main_ingredient.name %></td>
        <td><%= sub.ingredients.collect(&:name).inject { |list, ingredient| list + ", " + ingredient } %></td>
        <td><%= sub.sauce.name %></td>
        <td><%= link_to 'Show', sub %></td>
        <td><%= link_to 'Edit', edit_sub_path(sub) %></td>
        <td><%= link_to 'Destroy', sub, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

