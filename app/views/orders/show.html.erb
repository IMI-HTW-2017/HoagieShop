<h2>Order <%= @order.id %></h2>
<div class="round-borders">

<p id="notice"><%= notice %></p>

<p>
  <strong>Status:</strong>
  <%= @order.status %>
</p>

<p>
  <strong>Paid:</strong>
  <%= @order.paid %>
</p>

<p>
  <strong>Delivery address:</strong>
  <%= @order.delivery_address %>
</p>

<p>
  <strong>Billing method:</strong>
  <%= @order.billing_method %>
</p>

<p>
